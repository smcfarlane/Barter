<div class="container">
  <div class="row">
    <fieldset class="col-md-6">
      <legend>Service</legend>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= @service.name -%>"/>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10" class="form-control"><%= @service.description -%></textarea>
      </div>
      <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">
          <%- @categories.each do |c| -%>
            <option value="<%= c.id -%>"><%= c.category -%></option>
          <%- end -%>
        </select>
      </div>
      <div class="form-group">
        <input value="Submit Service" class="btn btn-primary" type="submit"/>
      </div>
    </fieldset>
  </div>
</div>