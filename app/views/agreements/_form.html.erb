<div class="container">
  <div class="row">
    <fieldset class="col-md-6">
      <legend>Agreement</legend>
      <div class="form-group">
        <p>Date: <%= Date.today %></p>
        <div class="form-group">
          <label for="received_skill_id">Skill provided by: <%= @user2.user_info.last_name %>, <%= @user2.user_info.first_name %></label>
          <select name="received_skill_id" id="received_skill_id" class="form-control">
            <%- @user2skills.each do |s| -%>
                <option value="<%= s.id -%>"><%= Skill.find(s.skill_id).name -%></option>
            <%- end -%>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="offered_skill_id">Skill you are providing: </label>
        <select name="offered_skill_id" id="offered_skill_id" class="form-control">
          <%- @user1skills.each do |s| -%>
              <option value="<%= s.id -%>"><%= Skill.find(s.skill_id).name -%></option>
          <%- end -%>
        </select>
      </div>

      <div class="form-group">
        <label for="details">Details</label>
        <textarea name="details" id="details" cols="30" rows="5" class="form-control"><%= @agreement.details -%></textarea>
      </div>
      <div class="form-group">
        <label for="name">Due Date</label>
        <input type="date" class="form-control" id="due_date" name="due_date" value="<%= @agreement.due_date -%>"/>
      </div>
      <input type="hidden" name="status" value="pending">
      <div class="form-group">
        <input value="Submit Proposed Agreement" class="btn btn-primary" type="submit"/>
      </div>
    </fieldset>
  </div>
</div>