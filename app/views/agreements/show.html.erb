<div class="container">
  <div class="row">
    <div class="btn-group">
      <%= link_to "View All", agreements_path, class: "btn btn-default", role: "button" -%>
    </div>
  </div>
  <div class="row top-40">
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Agreement:</h3>
            <h3><%= @agreement.user1.user_info.last_name %>, <%= @agreement.user1.user_info.first_name %></h3>
            <h4>Skill: <%= @agreement.skill1.name %></h4>
            <h3><%= @agreement.user2.user_info.last_name %>, <%= @agreement.user2.user_info.first_name %></h3>
            <h4>Skill: <%= @agreement.skill2.name %></h4>
          </div>
          <div class="panel-body">
            <strong>Details:</strong>
            <%= @agreement.details-%>
          </div>
          <div class="panel-body">
            <strong>Status:</strong>
            <%= @agreement.status-%>
          </div>
          <div class="panel-body">
            <strong>Due date:</strong>
            <%= @agreement.due_date-%>
          </div>
        </div>
      </div>
  </div>
  <div class="btn-group">
    <%= link_to "Edit", edit_agreement_path(@agreement.id), class: "btn btn-default" -%>
    <button type="button" class="btn" data-toggle="modal" data-target="#destroyModal">Delete</button>

  </div>
</div>
<%= render "destroy_modal" -%>
