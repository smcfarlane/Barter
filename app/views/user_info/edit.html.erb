<div class="container">
  <div class="row top-70 bottom-30">
    <div class="col-md-6 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2>Edit Profile</h2>
        </div>
        <div class="panel-body">
        <%= form_tag user_info_update_path do -%>
         <fieldset>
           <legend>Name</legend>
           <div class="form-group">
             <label for="first_name">First Name</label>
             <input type="text" name="user_info[first_name]" id="first_name" class="form-control" value="<%= current_user.user_info.first_name -%>"/>
           </div>
           <div class="form-group">
             <label for="last_name">Last Name</label>
             <input type="text" name="user_info[last_name]" id="last_name" class="form-control" value="<%= current_user.user_info.last_name -%>"/>
           </div>
         </fieldset>
          <fieldset>
            <legend>Address</legend>

            <div class="form-group">
              <label for="street_address">Street Address</label>
              <input type="text" name="address[street_address]" id="street_address" class="form-control" value="<%= current_user.addresses[0].street_address if current_user.addresses[0] -%>"/>
            </div>
            <div class="form-group">
              <label for="street_address2">Street Address 2</label>
              <input type="text" name="address[street_address2]" id="street_address2" class="form-control" value="<%= current_user.addresses[0].street_address2 if current_user.addresses[0] -%>"/>
            </div>
            <div class="form-inline">
              <div class="form-group">
                <label for="city">City</label><br/>
                <input type="text" name="address[city]" id="city" class="form-control" value="<%= current_user.addresses[0].city if current_user.addresses[0] -%>"/>
              </div>
              <div class="form-group">
                <label for="state">State</label><br/>
                <input type="text" name="address[state]" id="state" style="width: 60px" class="form-control" value="<%= current_user.addresses[0].state if current_user.addresses[0] -%>"/>
              </div>
              <div class="form-group">
                <label for="zip">Zip</label><br/>
                <input type="text" name="address[zip]" id="zip" class="form-control" value="<%= current_user.addresses[0].zip if current_user.addresses[0] -%>"/>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <legend>Phone</legend>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="text" name="phone[phone]" id="phone" class="form-control" value="<%= current_user.phones[0].phone if current_user.phones[0] -%>"/>
            </div>
          </fieldset>
          <input type="submit" value="update" class="btn btn-primary"/>
            <% end %>
            <%= link_to "Change your password?", new_password_path(current_user) %><br />
        </div>
      </div>
    </div>
  </div>
</div>
